<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/logohuila" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/twitter"
            android:gravity="center" />

        <ImageView
            android:id="@+id/tw_gobernador"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/te_gobernador"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/tw_gobernacion"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/tw_gobernacion" />
        <ImageView
            android:id="@+id/tw_jefeprensa"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/tw_jefeprensa"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/arco"
        android:layout_gravity="bottom"
        android:scaleType="fitEnd"/>
</RelativeLayout>