<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bordelateral">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/brillo"
        android:scaleType="centerCrop"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@drawable/logohuila"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/btn_pregunta"
                android:layout_marginLeft="18dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_pregunta" />

            <ImageView
                android:id="@+id/btn_tv"
                android:layout_marginLeft="20dp"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_tv" />

            <ImageView
                android:id="@+id/btn_noticias"
                android:layout_marginLeft="25dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_noticias" />

            <ImageView
                android:id="@+id/btn_image"
                android:layout_marginLeft="28dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_imagenes" />

            <ImageView
                android:id="@+id/btn_audio"
                android:layout_marginLeft="25dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_audio" />

            <ImageView
                android:id="@+id/btn_institucional"
                android:layout_marginLeft="26dp"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_institucionalidad" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:src="@drawable/escudo"
                android:layout_gravity="right" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>